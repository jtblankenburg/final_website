                            .col-6
                                ul
                                    li(id=`userTwoName${x}`)=users[x].firstname + ' ' +users[x].lastname
                                    li(id=`userTwoMajor${x}`)=users[x].major
                                    li(id=`userTwoYear${x}`)=users[x].year
                                    li=users[x].pin
                                    li(id=`userTwoFavPhrase${x}`)=users[x].favoritePhrase
