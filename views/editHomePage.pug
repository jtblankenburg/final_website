extends base

block content
    .modal.fade#userOneSelectModal(tabindex='-1' role='dialog' aria-labelledby='userOneModalLabel' aria-hidden='true')
        .modal-dialog(role='document')
            .modal-content
                .modal-header
                    input#userOneModalLabel.modal-title(placeholder='Search users')
                    button.btn.btn-success(type='submit') Search
                    button.close(type='button' data-dismiss='modal' aria-label='Close')
                        span(aria-hidden='true') &times;
                .modal-body
                    -var x = 0
                    -var length = users.length
                    while x<length                                     
                        .row
                            .col-6
                                img(class='img-thumbnail' src=`/img/users/${users[x].photo}`)
                                input(id=`userOneImg${x}` type='hidden' value=`${users[x].photo}`)
                            .col-6
                                ul
                                    li(id=`userOneName${x}`)=users[x].firstname + ' ' +users[x].lastname
                                    li(id=`userOneMajor${x}`)=users[x].major
                                    li(id=`userOneYear${x}`)=users[x].year
                                    li=users[x].pin
                                    li(id=`userOneFavPhrase${x}`)=users[x].favoritePhrase
                                    input(id=`userOne${x}` type='hidden' value=`${users[x].id}`)
                                button.btn.btn-light.selectUserOneBtn( type='click' data-dismiss='modal' value=`${users[x].id}`) Select
                        -x++
                .modal-footer
                    button.btn.btn-secondary(type='button' data-dismiss='modal') Close
                    button.btn.btn-primary(type='button') Save Changes
    .modal.fade#userTwoSelectModal(tabindex='-1' role='dialog' aria-labelledby='userTwoModalLabel' aria-hidden='true')
